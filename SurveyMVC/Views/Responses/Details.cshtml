@model SurveyMVC.Models.Response

@{
    ViewBag.Title = "Response Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-[004e92] text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-file-earmark-text"></i> Response Details</h4>
            <a href="@Url.Action("Index")"
               class="btn btn-sm text-white"
               style="background-color: #004e92; border-color: #004e92;">
                <i class="bi bi-arrow-left"></i> Back to Responses
            </a>
        </div>

        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold text-secondary">Survey Title</dt>
                <dd class="col-sm-9">@Model.Survey.Title</dd>

                @if (User.IsInRole("Admin"))
                {
                    <dt class="col-sm-3 fw-bold text-secondary">Submitted By</dt>
                    <dd class="col-sm-9">@Model.Employee.Email</dd>

                }
            </dl>

            <hr />

            @if (Model.Answers != null && Model.Answers.Any())
            {
                <h5 class="text-[004e92] mb-3">
                    <i class="bi bi-list-check"></i> Answers
                </h5>
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Question</th>
                            <th>Answer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var answer in Model.Answers)
                        {
                            <tr>
                                <td>@answer.Question.QuestionDetails</td>
                                <td>@answer.AnswerDetails</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted"><em>No answers found for this response.</em></p>
            }

            <div class="mt-4 d-flex justify-content-end gap-2">
                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                }
            </div>
        </div>
    </div>
</div>
