@model IEnumerable<SurveyMVC.Models.Response>

@{
    ViewBag.Title = "Responses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-[004e92]">
            <i class="bi bi-bar-chart-line"></i> Responses
        </h2>

        @if (User.IsInRole("Employee"))
        {
            <a href="@Url.Action("Index", "Surveys")" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle"></i> Submit New Response
            </a>
        }
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Survey</th>
                        @if(User.IsInRole("Admin"))
                        {
                            <th scope="col">Employee</th>
                        }
                        
                        <th scope="col">Answers Count</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Survey.Title)</td>
                            @if (User.IsInRole("Admin"))
                            {
                                  <td>@Html.DisplayFor(modelItem => item.Employee.Email)</td>
                            }
                            
                            <td>@(item.Answers != null ? item.Answers.Count : 0)</td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-primary btn-sm me-1">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
