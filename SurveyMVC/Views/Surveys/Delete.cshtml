@model SurveyMVC.Models.Survey

@{
    ViewBag.Title = "Delete Survey";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        Confirm Delete
                    </h4>
                </div>

                <div class="card-body">
                    <h5 class="text-danger mb-3">Are you sure you want to delete this survey?</h5>

                    <dl class="row">

                        <dt class="col-sm-3 text-muted">Survey Title</dt>
                        <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Title)</dd>
                    </dl>

                    <div class="alert alert-warning mt-4">
                        <strong>Warning:</strong> This action cannot be undone.
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div>
                            <input type="submit" value="Yes, Delete" class="btn btn-danger px-4" />
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary px-4 ms-2" })
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
