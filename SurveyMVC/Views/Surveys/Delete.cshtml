@model SurveyMVC.Models.Survey

@{
    ViewBag.Title = "Delete Survey";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <!-- Header -->
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-white">
                <i class="bi bi-exclamation-triangle-fill"></i> Delete Survey
            </h4>
            <a href="@Url.Action("Index")" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back to Surveys
            </a>
        </div>

        <!-- Body -->
        <div class="card-body">
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>
                    Are you sure you want to <strong>permanently delete</strong> this survey?
                </div>
            </div>

            <dl class="row mb-3">
                <dt class="col-sm-3 fw-bold text-secondary">Survey Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
            </dl>

            <div class="alert alert-warning mt-4">
                <strong>Warning:</strong> This action cannot be undone.
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill"></i> Delete
                    </button>
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary px-4" })
                </div>
            }
        </div>
    </div>
</div>


