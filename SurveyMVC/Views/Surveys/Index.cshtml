@model IEnumerable<SurveyMVC.Models.Survey>

@{
    ViewBag.Title = "Surveys";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold" style="color: #004e92;">
            <i class="bi bi-journal-text"></i> Surveys
        </h2>

        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Create")" class="btn btn-primary shadow-sm" style="background-color: #004e92; border: none;">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        }
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Admin</th>
                        <th scope="col">Title</th>
                        <th scope="col">Questions Count</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Admin.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@item.Questions.Count</td>
                            <td class="text-center">
                                @if (User.IsInRole("Admin"))
                                {
                                    if (item.Responses.Count == 0 && item.Questions.Count > 0)
                                    {
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-primary btn-sm me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                    }

                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-success btn-sm me-1">
                                        <i class="bi bi-eye"></i> Details
                                    </a>

                                    if (item.Responses.Count == 0)
                                    {
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    }
                                }
                                else
                                {
                                    if (item.Questions.Count > 0)
                                    {
                                        // Check if the current user has already responded to this survey
                                        var hasResponded = item.Responses.Any(r => r.Employee.Email == User.Identity.Name);

                                        if (hasResponded)
                                        {
                                            <button class="btn btn-secondary btn-sm" disabled>
                                                <i class="bi bi-check2-circle"></i> Responded
                                            </button>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Respond", new { surveyId = item.Id })" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-pencil"></i> Respond
                                            </a>
                                        }
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
